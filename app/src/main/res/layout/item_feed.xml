<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools"
                                    style="@style/CardView.ItemView"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/cardConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/topLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iconImageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/test_icon_image_view"/>

            <LinearLayout
                android:id="@+id/innerTopLinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/authorDisplayNameTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="Hubrick Original"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:ignore="SelectableText"/>

                <TextView
                    android:id="@+id/updatedAtTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="6 months"
                    android:textColor="@color/grey_material_400"
                    android:textStyle="bold"
                    tools:ignore="SelectableText"/>

            </LinearLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/mainImageView"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/test_main_image_view"
            app:layout_constraintBottom_toTopOf="@+id/plainTitleTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/topLinearLayout"/>

        <TextView
            android:id="@+id/plainTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp"
            android:text="Be rewarded in new ways"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/plainContentPreviewTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mainImageView"
            tools:ignore="SelectableText"/>

        <TextView
            android:id="@+id/plainContentPreviewTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="2"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="Be rewarded in new ways. If you're like us, you spend a lot of time connected to the internet, staring at your phone, your computer, your tablet, reading, watching videos, playing games, sharing your opinions on what's going on around you..."
            app:layout_constraintBottom_toTopOf="@+id/bottomLinearLayout"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plainTitleTextView"
            tools:ignore="SelectableText"/>

        <LinearLayout
            android:id="@+id/bottomLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/plainContentPreviewTextView">

            <ImageView
                android:id="@+id/likeImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/test_like_button_image_view"/>

            <TextView
                android:id="@+id/likeTextView"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="3"
                android:textColor="@color/grey_material_500"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/commentImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/test_comment_button_image_view"/>

            <TextView
                android:id="@+id/commentTextView"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="9"
                android:textColor="@color/grey_material_500"
                android:textSize="18sp"/>

            <ImageView
                android:id="@+id/shareImageView"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:src="@drawable/test_share_button_image_view"/>

            <TextView
                android:id="@+id/shareTextView"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:gravity="center"
                android:text="1"
                android:textColor="@color/grey_material_500"
                android:textSize="18sp"/>

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
